#board

#actions
  %button#random Random
  %button#start Start
  %button#stop Stop
  %button#clear Clear


:javascript
  $(function(){
    var game = new Game({size: 50});

    $("body").bind("keyup", function(e){
      if(e.keyCode == 32){ game.step(); }
    });

    $("#random").click(function(){ game.random(); });
    $("#start").click(function(){ game.start(); });
    $("#stop").click(function(){ game.stop(); });
    $("#clear").click(function(){ game.clear(); });
  });
